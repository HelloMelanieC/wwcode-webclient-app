    <%= text_field_tag "password", nil, placeholder: "Password", class: "user_account_text_field" %>
  </div>  

  <div class="sign_up">
    <%= text_field_tag "password_confirmation", nil, placeholder: "Password Confirmation", class: "user_account_text_field" %>
