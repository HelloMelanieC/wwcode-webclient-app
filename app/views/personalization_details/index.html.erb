<div class="hopes">

  <%= image_tag('personalization_1.png', class: 'check_pic')%>
  <%= image_tag('personalization_2_dark.png', class: 'circle_number_pic')%>
  <%= image_tag('personalization_3_dark.png', class: 'circle_number_pic')%>

  <div class="title">
    <p id="form_title">What do you hope to get out of WWCode?</p>
  </div>
</div>

<div class="interests">
  <%= image_tag('personalization.gif', class: 'check_pic')%>
  <%= image_tag('personalization_2.png', class: 'circle_number_pic')%>
  <%= image_tag('personalization_3_dark.png', class: 'circle_number_pic')%>

  <p id="form_title">Engineering area(s) of interest</p>
</div>  

<div class="experience">
  <%= image_tag('personalization.gif', class: 'check_pic')%>
  <%= image_tag('personalization.gif', class: 'check_pic')%>
  <%= image_tag('personalization_3.png', class: 'circle_number_pic')%>

  <div class="title">
    <p id="form_title_experience">What's your current techincal skill-set level?</p>
  </div>
</div>

<%= form_tag '/personalization_details', method: :post do %>
  <div class="hopes">
    <div class='form_checkboxes_list'>
      <div class='form_checkboxes'>
        <%= check_box_tag 'enhancing_your_technical_skills' %>
        <%= label_tag 'enhancing_your_technical_skills', 'enhancing your technical skills', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= check_box_tag 'leadership_skills' %> 
        <%= label_tag 'leadership_skills', 'leadership skills', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= check_box_tag 'career_development' %> 
        <%= label_tag 'career_development', 'career development (e.g. negotiating, interviewing)', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= check_box_tag 'professional_network' %> 
        <%= label_tag 'professional_network', 'professional network', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= check_box_tag 'technical_profile' %> 
        <%= label_tag 'technical_profile', 'enhancing your technical profile (e.g. speaking opportunities, techinical blogging)', class: "form_checkbox_labels" %> 
      </div >
      <div class='form_checkboxes'>
        <%= text_field_tag "Other", nil, placeholder: "Other", class: "other" %>
      </div>
      <div class="next_div">Next</div> 
    </div> 
  </div>

  <div class="interests">
    <div class='form_checkboxes_list'>
      <div class='form_checkboxes'>
        <%= check_box_tag 'architecture' %> 
        <%= label_tag 'architecture', 'architecture', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= check_box_tag 'security' %> 
        <%= label_tag 'security', 'security', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= check_box_tag 'data science' %> 
        <%= label_tag 'data science', 'data science', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= check_box_tag 'analytics' %> 
        <%= label_tag 'analytics', 'analytics', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= check_box_tag 'open source' %> 
        <%= label_tag 'open source', 'open source', class: "form_checkbox_labels" %> 
      </div >
      <div class='form_checkboxes'>
        <%= check_box_tag 'devops' %> 
        <%= label_tag 'devops', 'devops', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= check_box_tag 'web' %> 
        <%= label_tag 'web', 'web', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= check_box_tag 'mobile' %> 
        <%= label_tag 'mobile', 'mobile', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= check_box_tag 'enterprise' %> 
        <%= label_tag 'enterprise', 'enterprise', class: "form_checkbox_labels" %>
      </div>
      <div class='form_checkboxes'>
        <%= text_field_tag "Other", nil, placeholder: "Other", class: "other" %>
      </div>
      <div class="next_div">Next</div>  
    </div>
  </div> 

  <div class="experience">
    <div class='form_checkboxes_list'>
      <div class='form_checkboxes'>
        <%= radio_button_tag 'experience', "expert" %> 
        <%= label_tag 'experience_expert', 'singularity (10+ years)', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= radio_button_tag 'experience', "advanced" %> 
        <%= label_tag 'experience_advanced', 'advanced (5+ years)', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= radio_button_tag 'experience', "intermediate" %> 
        <%= label_tag 'experience_intermediate', 'intermediate (2-5 years)', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= radio_button_tag 'experience', "beginner" %> 
        <%= label_tag 'experience_beginner', 'beginner (2 years)', class: "form_checkbox_labels" %> 
      </div>
      <div class='form_checkboxes'>
        <%= radio_button_tag 'experience', "newbie"  %> 
        <%= label_tag 'experience_newbie', 'newbie (1 year)', class: "form_checkbox_labels" %> 
      </div >
      <div class='form_checkboxes'>
        <%= text_field_tag "Other", nil, placeholder: "Other", class: "other" %>
      </div>
      <%= submit_tag "Next", class: "next_button" %>  
    </div>
  </div> 
<% end %>

<script>
  var showCounter = 0;
  
  $(document).ready(function(){
    $('.interests').hide();
    $('.experience').hide();
  })

  $('.next_div').click(function(){
    showCounter += 1;
    if(showCounter === 1){
      $('.hopes').hide();
      $('.interests').show();
    } else if (showCounter === 2) {
      $('.interests').hide();
      $('.experience').show();
    }
  })

  $('.other').click(function() {
    $('input[type=radio]').removeAttr("checked");
  });

  $('input[type=radio]').click(function () {
    $('input:text.other').val('');
  });

 </script>